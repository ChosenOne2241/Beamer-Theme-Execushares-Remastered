\mode<presentation>

\definecolor{mywhite}{RGB}{255, 255, 243} % The background canvas colour.
\definecolor{myred}{RGB}{230, 37, 52} % The colour for (frame) titles, footlines etc.
\definecolor{mygrey}{RGB}{208, 202, 194} % The block body colour.
\definecolor{mylightgreen}{RGB}{127, 207, 171} % The item colour.
\definecolor{mydarkgreen}{RGB}{47, 121, 68} % The example colour.
\definecolor{mylightblue}{RGB}{22, 190, 207} % The alert colour.
\definecolor{mydarkblue}{RGB}{0, 61, 121} % The block title colour.

% The colour configuration.
\setbeamercolor{background canvas}{bg = mywhite}
\setbeamercolor{title}{fg = mywhite, bg = myred}
\setbeamercolor{frametitle}{fg = mywhite, bg = myred}
\setbeamercolor{structure}{fg = myred}
\setbeamercolor{footnote mark}{fg = myred}
\setbeamercolor{section in head/foot}{fg = mywhite, bg = myred}
\setbeamercolor{subsection in head/foot}{fg = mywhite, bg = myred}

\setbeamercolor{block title}{fg = mywhite, bg = mydarkblue}
\setbeamercolor{block body}{bg = mygrey}
\setbeamercolor{block title example}{fg = mywhite, bg = mydarkgreen}
\setbeamercolor{block body example}{bg = mygrey}
\setbeamercolor{block title alerted}{fg = mywhite, bg = mylightblue}
\setbeamercolor{block body alerted}{bg = mygrey}
\setbeamercolor{alerted text}{fg = mylightblue}

\setbeamercolor{item projected}{fg = mywhite, bg = mylightgreen}
\setbeamercolor{subitem projected}{fg = mywhite, bg = mylightgreen}
\setbeamercolor{subsubitem projected}{fg = mywhite, bg = mylightgreen}
\setbeamercolor{itemize item}{fg = mylightgreen}
\setbeamercolor{itemize subitem}{fg = mylightgreen}
\setbeamercolor{itemize subsubitem}{fg = mylightgreen} 
